{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "hl",
            "request": "launch",
            "program": "out.hl",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch Eval",
            "type": "haxe-eval",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "args": [
                "-p",
                "src",
                "--run",
                "Main"
            ]
        },
        {
            "name": "Launch CPP",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/out/Main.exe",
            "cwd": "${workspaceRoot}"
        }
    ]
}